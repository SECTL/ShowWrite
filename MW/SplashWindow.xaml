<Window x:Class="ShowWrite.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ShowWrite" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Opacity="0.5" BlurRadius="20" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="8" Background="White">
            <Image x:Name="SplashImage" 
                   Stretch="Uniform" 
                   SnapsToDevicePixels="True"
                   UseLayoutRounding="True"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Border>

        <!-- 加载指示器（可选） -->
        <Grid VerticalAlignment="Bottom" Height="30" Margin="0,0,0,10">
            <ProgressBar x:Name="LoadingProgress" 
                        Height="4" 
                        Width="200" 
                        HorizontalAlignment="Center"
                        IsIndeterminate="True"
                        Foreground="#007ACC"/>
        </Grid>
    </Grid>
</Window>